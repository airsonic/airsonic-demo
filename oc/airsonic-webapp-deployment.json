{
  "apiVersion": "v1",
  "kind": "DeploymentConfig",
  "metadata": {
    "labels": {
      "app": "airsonic-webapp"
    },
    "name": "airsonic-webapp"
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "app": "airsonic-webapp",
      "deploymentconfig": "airsonic-webapp"
    },
    "strategy": {
      "type": "Recreate"
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "airsonic-webapp",
          "deploymentconfig": "airsonic-webapp"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "airsonic-webapp",
            "imagePullPolicy": "Always",
            "ports": [
              {
                "containerPort": 8778,
                "protocol": "TCP"
              },
              {
                "containerPort": 9779,
                "protocol": "TCP"
              }
            ],
            "terminationMessagePath": "/dev/termination-log",
            "terminationMessagePolicy": "File",
            "resources": {
              "limits": {
                "memory": "512Mi"
              }
            },
            "env": [
              {
                "name": "CATALINA_OPTS",
                "value": "-XX:+UnlockExperimentalVMOptions -XX:+UseCGroupMemoryLimitForHeap -DDATABASE_NAME=${DATABASE_NAME} -DDATABASE_USER=${DATABASE_USER} -DDATABASE_PASSWORD=${DATABASE_PASSWORD}"
              },
              {
                "name": "DATABASE_USER",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "postgresql",
                    "key": "database-user"
                  }
                }
              },
              {
                "name": "DATABASE_PASSWORD",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "postgresql",
                    "key": "database-password"
                  }
                }
              },
              {
                "name": "DATABASE_NAME",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "postgresql",
                    "key": "database-name"
                  }
                }
              }
            ]
          }
        ],
        "dnsPolicy": "ClusterFirst",
        "restartPolicy": "Always",
        "schedulerName": "default-scheduler",
        "terminationGracePeriodSeconds": 30
      }
    },
    "test": false,
    "triggers": [
      {
        "type": "ConfigChange"
      },
      {
        "imageChangeParams": {
          "automatic": true,
          "containerNames": [
            "airsonic-webapp"
          ],
          "from": {
            "kind": "ImageStreamTag",
            "name": "airsonic-webapp:latest",
            "namespace": "airsonic-demo"
          }
        },
        "type": "ImageChange"
      }
    ]
  }
}
